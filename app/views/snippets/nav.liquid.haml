%nav.navbar
  .container
    .navbar-header
      %a.navbar-brand{href: "{% path_to home %}"} {{ site.name }}
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        %li{class: "{% if page.handle == 'home' %}active{% endif %}" }
          %a.site-nav__link{ href: "{% path_to home %}"} Home
        {% for page_in_nav in site.pages %}
        {% if page_in_nav.depth == 1 %}
        %li{class: "{% if page.fullpath == page_in_nav.fullpath %}active{% endif %}" }
          %a.site-nav__link(href="{% path_to page_in_nav %}") {{ page_in_nav.title }}
        {% endif %}
        {% endfor %}
