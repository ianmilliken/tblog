%nav.site-nav
  .container.flexbox
    %a.site-nav__logo{href: "{% path_to home %}"} {{ site.name }}
    %ul.site-nav__list
      %li{class: "site-nav__list-item {% if page.handle == 'home' %}active{% endif %}" }
        %a.site-nav__link{ href: "{% path_to home %}"} Home
      {% for page_in_nav in site.pages %}
      {% if page_in_nav.depth == 1 %}
      %li{class: "site-nav__list-item {% if page.fullpath == page_in_nav.fullpath %}active{% endif %}" }
        %a.site-nav__link(href="{% path_to page_in_nav %}") {{ page_in_nav.title }}
      {% endif %}
      {% endfor %}
